{
  "manifest_version": 2,

  "name": "ArticleSize",
  "description": "This extension estimates how long it will take you to read reddit and hacker news articles ",
  "version": "1.0",

   "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs",
  ]
}
